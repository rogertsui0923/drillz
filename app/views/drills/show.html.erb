<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
      <h1>Drill Group: <%= @drill.drill_group.name %></h1>
        <h3>Q : <%= @drill.description %></h3>

      <h4>Type your answer</h4>
      <% if !flash[:submitted] %>
        <%= simple_form_for [@drill, @attempt],
            url: drill_attempts_path(@drill),
            method: :post,
            html: { class: 'answer-form' } do |f| %>
           <%= f.input :body, label: false, input_html: {class: 'form-group'} %>

           <%= f.submit :submit, class: 'btn btn-primary' %>

        <% end %>
      <% else  %>
        <%= @attempt.body %>
      <% end %>
      <hr>


      <% if flash[:submitted] %>
        <% if @drill.next.nil? %>
        <%= button_to 'Done!', group_session_path(@group_session),
                               method: :get,
                               class: 'btn btn-primary' %>
        <% else %>
        <%= button_to 'NEXT DRILL', drill_path(@drill.next),
                                    method: :get,
                                    class: 'btn btn-primary' %>
        <% end %>

        <div class="solution">
          <h3>Solutions</h3>
          <ul>
            <% @drill.solutions.each do |s| %>
              <li><%= s.body %></li>
            <% end %>
          </ul>
        </div>

      <% end %>
    </div>
  </div>
</div>
