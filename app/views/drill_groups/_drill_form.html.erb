<div>
  <%= simple_form_for [@drill_group, @drill] do |f| %>
    <%= f.input :description, label: false %>
    <%= f.simple_fields_for :solutions do |s| %>
      <%= render 'solution_fields', f: s %>
    <% end %>
    <div>
      <%= link_to_add_association 'Add Another Solution', f, :solutions %>
    </div>
    <div class="save-drill-button">
      <%= f.submit 'Save Drill', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
